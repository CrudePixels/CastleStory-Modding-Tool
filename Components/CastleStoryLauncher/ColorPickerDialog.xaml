<Window x:Class="CastleStoryLauncher.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" Background="#FF2D2D30"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Color Picker" 
                   FontSize="16" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Color Name -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Name:" FontWeight="Bold" Foreground="White" 
                       Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="ColorNameTextBox" Width="200" 
                     Background="#FF4A4A4A" Foreground="White" 
                     BorderBrush="#FF6C757D" Padding="5"/>
        </StackPanel>
        
        <!-- Color Preview -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Preview:" FontWeight="Bold" Foreground="White" 
                       Width="80" VerticalAlignment="Center"/>
            <Border x:Name="ColorPreviewBorder" Width="100" Height="30" 
                    Background="White" BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>
        
        <!-- RGB Sliders -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Red -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Red:" FontWeight="Bold" 
                       Foreground="Red" Width="40" VerticalAlignment="Center"/>
            <Slider Grid.Row="0" Grid.Column="1" x:Name="RedSlider" 
                    Minimum="0" Maximum="255" Value="255" 
                    ValueChanged="ColorSlider_ValueChanged" Margin="10,0"/>
            <TextBlock Grid.Row="0" Grid.Column="2" x:Name="RedValue" Text="255" 
                       Foreground="White" Width="30" VerticalAlignment="Center"/>
            
            <!-- Green -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Green:" FontWeight="Bold" 
                       Foreground="Green" Width="40" VerticalAlignment="Center"/>
            <Slider Grid.Row="1" Grid.Column="1" x:Name="GreenSlider" 
                    Minimum="0" Maximum="255" Value="255" 
                    ValueChanged="ColorSlider_ValueChanged" Margin="10,0"/>
            <TextBlock Grid.Row="1" Grid.Column="2" x:Name="GreenValue" Text="255" 
                       Foreground="White" Width="30" VerticalAlignment="Center"/>
            
            <!-- Blue -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Blue:" FontWeight="Bold" 
                       Foreground="Blue" Width="40" VerticalAlignment="Center"/>
            <Slider Grid.Row="2" Grid.Column="1" x:Name="BlueSlider" 
                    Minimum="0" Maximum="255" Value="255" 
                    ValueChanged="ColorSlider_ValueChanged" Margin="10,0"/>
            <TextBlock Grid.Row="2" Grid.Column="2" x:Name="BlueValue" Text="255" 
                       Foreground="White" Width="30" VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Hex Value -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Hex:" FontWeight="Bold" Foreground="White" 
                       Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="HexValueTextBox" Width="100" 
                     Background="#FF4A4A4A" Foreground="White" 
                     BorderBrush="#FF6C757D" Padding="5" 
                     TextChanged="HexValue_TextChanged"/>
        </StackPanel>
        
        <!-- Quick Colors -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="Quick Colors:" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <WrapPanel>
                <Border Width="30" Height="30" Background="Red" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Red"/>
                <Border Width="30" Height="30" Background="Green" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Green"/>
                <Border Width="30" Height="30" Background="Blue" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Blue"/>
                <Border Width="30" Height="30" Background="Yellow" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Yellow"/>
                <Border Width="30" Height="30" Background="Orange" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Orange"/>
                <Border Width="30" Height="30" Background="Purple" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Purple"/>
                <Border Width="30" Height="30" Background="Cyan" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Cyan"/>
                <Border Width="30" Height="30" Background="Magenta" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Magenta"/>
                <Border Width="30" Height="30" Background="White" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="White"/>
                <Border Width="30" Height="30" Background="Black" Margin="2" Cursor="Hand" 
                        MouseLeftButtonDown="QuickColor_Click" Tag="Black"/>
            </WrapPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OKButton" Content="OK" 
                   Click="OKButton_Click" Background="#FF28A745" 
                   Foreground="White" BorderBrush="#FF28A745" 
                   Padding="15,5" Margin="0,0,10,0" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                   Click="CancelButton_Click" Background="#FF6C757D" 
                   Foreground="White" BorderBrush="#FF6C757D" 
                   Padding="15,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
