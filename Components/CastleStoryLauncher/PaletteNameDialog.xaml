<Window x:Class="CastleStoryLauncher.PaletteNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Palette Name" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" Background="#FF2D2D30"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" x:Name="TitleText" Text="Enter Palette Name" 
                   FontSize="16" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Name Label -->
        <TextBlock Grid.Row="1" Text="Name:" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,5"/>
        
        <!-- Name Input -->
        <TextBox Grid.Row="2" x:Name="NameTextBox" 
                 Background="#FF4A4A4A" Foreground="White" 
                 BorderBrush="#FF6C757D" Padding="8" 
                 TextChanged="NameTextBox_TextChanged"/>
        
        <!-- Description Label -->
        <TextBlock Grid.Row="3" Text="Description (optional):" FontWeight="Bold" 
                   Foreground="White" Margin="0,15,0,5"/>
        
        <!-- Description Input -->
        <TextBox Grid.Row="4" x:Name="DescriptionTextBox" 
                 Background="#FF4A4A4A" Foreground="White" 
                 BorderBrush="#FF6C757D" Padding="8" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Height="60"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OKButton" Content="OK" 
                   Click="OKButton_Click" Background="#FF28A745" 
                   Foreground="White" BorderBrush="#FF28A745" 
                   Padding="15,5" Margin="0,0,10,0" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                   Click="CancelButton_Click" Background="#FF6C757D" 
                   Foreground="White" BorderBrush="#FF6C757D" 
                   Padding="15,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
