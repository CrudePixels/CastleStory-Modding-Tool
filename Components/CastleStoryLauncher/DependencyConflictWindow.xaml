<Window x:Class="CastleStoryLauncher.DependencyConflictWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dependency Conflicts" Height="500" Width="800"
        WindowStartupLocation="CenterOwner" Background="#FF2D2D30"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FFDC3545" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="⚠️ Dependency Conflicts Detected" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="The following issues need to be resolved before launching the game" 
                          FontSize="12" 
                          Foreground="White" HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Conflicts List -->
        <GroupBox Grid.Row="1" Header="Conflicts and Issues" Foreground="White" FontWeight="Bold">
            <ListBox x:Name="ConflictsListBox" 
                    Background="#FF404040" 
                    Foreground="White" 
                    BorderBrush="#FF606060">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="{Binding Severity}" 
                                          FontWeight="Bold" 
                                          FontSize="12" 
                                          Foreground="White"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Type}" 
                                          FontSize="11" 
                                          Foreground="#FFCCCCCC"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ModId}" 
                                      FontWeight="Bold" 
                                      FontSize="14" 
                                      Foreground="White"
                                      Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding Message}" 
                                      FontSize="11" 
                                      Foreground="#FFAAAAAA" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="ResolveButton" Content="Auto-Resolve" 
                   Click="ResolveButton_Click" 
                   Background="#FF28A745" 
                   Foreground="White" 
                   BorderBrush="#FF28A745" 
                   Padding="15,8" 
                   Margin="0,0,10,0"/>
            <Button x:Name="CloseButton" Content="Close" 
                   Click="CloseButton_Click" 
                   Background="#FF6C757D" 
                   Foreground="White" 
                   BorderBrush="#FF6C757D" 
                   Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
