<Window x:Class="CastleStoryLauncher.ColorPaletteEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Palette Editor" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner" Background="#FF2D2D30"
        ResizeMode="CanResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF3C3C3C" Padding="15">
            <StackPanel>
                <TextBlock Text="🎨 Color Palette Editor" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Create and manage custom color palettes for faction colors" 
                           FontSize="12" Foreground="LightGray" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Palette List -->
            <Border Grid.Column="0" Background="#FF3C3C3C" CornerRadius="5" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Palette List Header -->
                    <Border Grid.Row="0" Background="#FF4A4A4A" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Color Palettes" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Select a palette to edit" FontSize="10" Foreground="LightGray"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Palette List -->
                    <ListBox x:Name="PaletteListBox" Grid.Row="1" 
                             Background="Transparent" BorderThickness="0"
                             SelectionChanged="PaletteListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF4A4A4A" CornerRadius="3" Margin="5" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding Description}" FontSize="10" Foreground="LightGray" TextWrapping="Wrap"/>
                                        <TextBlock FontSize="9" Foreground="Orange">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} colors">
                                                    <Binding Path="Colors.Count"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Palette Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <Button x:Name="NewPaletteButton" Content="➕ New" 
                               Click="NewPaletteButton_Click" Background="#FF28A745" 
                               Foreground="White" BorderBrush="#FF28A745" 
                               Padding="8,3" Margin="0,0,5,0"/>
                        <Button x:Name="ClonePaletteButton" Content="📋 Clone" 
                               Click="ClonePaletteButton_Click" Background="#FF17A2B8" 
                               Foreground="White" BorderBrush="#FF17A2B8" 
                               Padding="8,3" Margin="0,0,5,0"/>
                        <Button x:Name="DeletePaletteButton" Content="🗑️ Delete" 
                               Click="DeletePaletteButton_Click" Background="#FFDC3545" 
                               Foreground="White" BorderBrush="#FFDC3545" 
                               Padding="8,3"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Palette Editor -->
            <Border Grid.Column="1" Background="#FF3C3C3C" CornerRadius="5" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Palette Info -->
                    <Border Grid.Row="0" Background="#FF4A4A4A" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="PaletteNameText" Text="Select a palette" 
                                           FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock x:Name="PaletteDescriptionText" Text="" 
                                           FontSize="12" Foreground="LightGray" TextWrapping="Wrap"/>
                                <TextBlock x:Name="PaletteStatsText" Text="" 
                                           FontSize="10" Foreground="Orange"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="SetDefaultButton" Content="⭐ Set Default" 
                                       Click="SetDefaultButton_Click" Background="#FFFFC107" 
                                       Foreground="Black" BorderBrush="#FFFFC107" 
                                       Padding="8,3" Margin="0,0,5,0"/>
                                <Button x:Name="ExportButton" Content="📤 Export" 
                                       Click="ExportButton_Click" Background="#FF6F42C1" 
                                       Foreground="White" BorderBrush="#FF6F42C1" 
                                       Padding="8,3"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Color Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                        <ItemsControl x:Name="ColorItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="80" Height="80" 
                                            CornerRadius="5" Margin="5" Cursor="Hand"
                                            MouseLeftButtonDown="ColorBorder_MouseLeftButtonDown">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Border.Background>
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="White"/>
                                        </Border.BorderBrush>
                                        <Border.BorderThickness>
                                            <Thickness>2</Thickness>
                                        </Border.BorderThickness>
                                        <StackPanel VerticalAlignment="Bottom" Background="#80000000">
                                            <TextBlock Text="{Binding Name}" FontSize="10" FontWeight="Bold" 
                                                       Foreground="White" HorizontalAlignment="Center" 
                                                       TextWrapping="Wrap" Margin="2"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Color Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <Button x:Name="AddColorButton" Content="➕ Add Color" 
                               Click="AddColorButton_Click" Background="#FF28A745" 
                               Foreground="White" BorderBrush="#FF28A745" 
                               Padding="8,3" Margin="0,0,5,0"/>
                        <Button x:Name="EditColorButton" Content="✏️ Edit Color" 
                               Click="EditColorButton_Click" Background="#FF17A2B8" 
                               Foreground="White" BorderBrush="#FF17A2B8" 
                               Padding="8,3" Margin="0,0,5,0"/>
                        <Button x:Name="RemoveColorButton" Content="🗑️ Remove" 
                               Click="RemoveColorButton_Click" Background="#FFDC3545" 
                               Foreground="White" BorderBrush="#FFDC3545" 
                               Padding="8,3"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF3C3C3C" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ImportButton" Content="📥 Import Palette" 
                       Click="ImportButton_Click" Background="#FF6C757D" 
                       Foreground="White" BorderBrush="#FF6C757D" 
                       Padding="10,5" Margin="0,0,10,0"/>
                <Button x:Name="CloseButton" Content="Close" 
                       Click="CloseButton_Click" Background="#FF6C757D" 
                       Foreground="White" BorderBrush="#FF6C757D" 
                       Padding="10,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
