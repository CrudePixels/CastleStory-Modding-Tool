<UserControl x:Class="CastleStoryLauncher.TeamManagerEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF2D2D30">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FFE67C22" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="👥 Team Management" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Manage teams, players, and multiplayer settings" 
                          FontSize="12" 
                          Foreground="White" HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Teams and Players -->
            <GroupBox Grid.Column="0" Header="Teams and Players" Foreground="White" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Teams List -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="TeamsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF404040" Margin="5" Padding="10" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Team Color -->
                                            <Border Grid.Column="0" Width="20" Height="20" 
                                                   Background="{Binding Color}" 
                                                   CornerRadius="10" Margin="0,0,10,0"/>
                                            
                                            <!-- Team Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Faction}" 
                                                          Foreground="LightGray" FontSize="10"/>
                                                <TextBlock Text="{Binding Players.Count, StringFormat='Players: {0}'}" 
                                                          Foreground="LightBlue" FontSize="10"/>
                                            </StackPanel>
                                            
                                            <!-- Team Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="✏️" Width="25" Height="25" 
                                                       Margin="2" Click="EditTeam_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="🗑️" Width="25" Height="25" 
                                                       Margin="2" Click="DeleteTeam_Click" 
                                                       Tag="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Add Team Button -->
                    <Button Grid.Row="1" Content="➕ Add Team" 
                           Background="#FF4CAF50" Foreground="White" 
                           Padding="10,5" Margin="5" 
                           Click="AddTeam_Click"/>
                </Grid>
            </GroupBox>
            
            <!-- Divider -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" 
                         Background="#FF404040" ShowsPreview="True"/>
            
            <!-- Player Management -->
            <GroupBox Grid.Column="2" Header="Player Management" Foreground="White" FontWeight="Bold">
                <StackPanel>
                    <!-- Add Player -->
                    <GroupBox Header="Add Player" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Player Name:" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="PlayerNameTextBox" 
                                   Background="#FF404040" Foreground="White" 
                                   BorderBrush="#FF606060" Margin="0,0,0,5"/>
                            <TextBlock Text="Steam ID (Optional):" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="SteamIdTextBox" 
                                   Background="#FF404040" Foreground="White" 
                                   BorderBrush="#FF606060" Margin="0,0,0,10"/>
                            <Button Content="➕ Add Player" 
                                   Background="#FF2196F3" Foreground="White" 
                                   Padding="10,5" Click="AddPlayer_Click"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Player List -->
                    <GroupBox Header="Players" Margin="0,0,0,10">
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="PlayersList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF404040" Margin="2" Padding="5" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                              Foreground="White" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding TeamId, StringFormat='Team: {0}'}" 
                                                              Foreground="LightGray" FontSize="10"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" Content="❌" 
                                                       Width="20" Height="20" 
                                                       Click="RemovePlayer_Click" 
                                                       Tag="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    
                    <!-- Team Assignment -->
                    <GroupBox Header="Team Assignment" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Player:" Foreground="White" Margin="0,0,0,5"/>
                            <ComboBox x:Name="PlayerComboBox" 
                                     Background="#FF404040" Foreground="White" 
                                     BorderBrush="#FF606060" Margin="0,0,0,5"/>
                            <TextBlock Text="Team:" Foreground="White" Margin="0,0,0,5"/>
                            <ComboBox x:Name="TeamComboBox" 
                                     Background="#FF404040" Foreground="White" 
                                     BorderBrush="#FF606060" Margin="0,0,0,10"/>
                            <Button Content="🎯 Assign to Team" 
                                   Background="#FF9C27B0" Foreground="White" 
                                   Padding="10,5" Click="AssignPlayerToTeam_Click"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Settings -->
                    <GroupBox Header="Settings" Margin="0,0,0,10">
                        <StackPanel>
                            <CheckBox x:Name="AutoBalanceCheckBox" Content="Auto Balance Teams" 
                                     Foreground="White" Margin="0,0,0,5"/>
                            <CheckBox x:Name="AllowTeamSwitchCheckBox" Content="Allow Team Switching" 
                                     Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="Max Teams:" Foreground="White" Margin="0,5,0,0"/>
                            <TextBox x:Name="MaxTeamsTextBox" 
                                   Background="#FF404040" Foreground="White" 
                                   BorderBrush="#FF606060" Margin="0,0,0,5"/>
                            <TextBlock Text="Max Players per Team:" Foreground="White" Margin="0,5,0,0"/>
                            <TextBox x:Name="MaxPlayersPerTeamTextBox" 
                                   Background="#FF404040" Foreground="White" 
                                   BorderBrush="#FF606060"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="💾 Save Configuration" 
                   Background="#FF4CAF50" Foreground="White" 
                   Padding="15,8" Margin="0,0,10,0" 
                   Click="SaveButton_Click"/>
            <Button x:Name="LoadButton" Content="📁 Load Configuration" 
                   Background="#FF2196F3" Foreground="White" 
                   Padding="15,8" Margin="0,0,10,0" 
                   Click="LoadButton_Click"/>
            <Button x:Name="GenerateLuaButton" Content="📝 Generate Lua" 
                   Background="#FF9C27B0" Foreground="White" 
                   Padding="15,8" 
                   Click="GenerateLuaButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
