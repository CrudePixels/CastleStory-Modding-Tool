<UserControl x:Class="CastleStoryLauncher.MemoryPatchEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF2D2D30">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FFE67C22" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="ðŸ”§ Memory Patch Configuration" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Configure dynamic memory patching for Castle Story" 
                          FontSize="12" 
                          Foreground="White" HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Patch Categories -->
            <GroupBox Grid.Column="0" Header="Patch Categories" Foreground="White" FontWeight="Bold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <ItemsControl x:Name="CategoryItems">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Header="{Binding Name}" Foreground="White" Margin="0,2">
                                    <StackPanel Margin="10,5">
                                        <TextBlock Text="{Binding Description}" 
                                                  Foreground="LightGray" 
                                                  TextWrapping="Wrap" 
                                                  Margin="0,0,0,10"/>
                                        
                                        <CheckBox Content="Enable All Patches in Category" 
                                                 Foreground="White" 
                                                 FontWeight="Bold"
                                                 Checked="CategoryEnableAll_Checked"
                                                 Unchecked="CategoryEnableAll_Unchecked"
                                                 Tag="{Binding}"/>
                                        
                                        <ItemsControl ItemsSource="{Binding Patterns}" Margin="10,5,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,2">
                                                        <CheckBox Content="{Binding Name}" 
                                                                Foreground="White" 
                                                                IsChecked="{Binding Enabled}"
                                                                Checked="PatternEnable_Checked"
                                                                Unchecked="PatternEnable_Unchecked"
                                                                Tag="{Binding}"/>
                                                        <TextBlock Text="{Binding Description}" 
                                                                  Foreground="LightGray" 
                                                                  FontSize="10" 
                                                                  Margin="20,0,0,5"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
            
            <!-- Divider -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" 
                         Background="#FF404040" ShowsPreview="True"/>
            
            <!-- Patch Details -->
            <GroupBox Grid.Column="2" Header="Patch Details" Foreground="White" FontWeight="Bold">
                <StackPanel>
                    <!-- Selected Patch Info -->
                    <TextBlock x:Name="SelectedPatchName" Text="No patch selected" 
                              Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="SelectedPatchDescription" Text="Select a patch to view details" 
                              Foreground="LightGray" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <!-- Patch Status -->
                    <GroupBox Header="Status" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock x:Name="PatchStatus" Text="Status: Unknown" 
                                      Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock x:Name="PatchCategory" Text="Category: None" 
                                      Foreground="LightGray" Margin="0,0,0,5"/>
                            <TextBlock x:Name="PatchEnabled" Text="Enabled: No" 
                                      Foreground="LightGray"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Patch Actions -->
                    <GroupBox Header="Actions" Margin="0,0,0,10">
                        <StackPanel>
                            <Button x:Name="TestPatchButton" Content="ðŸ§ª Test Patch" 
                                   Background="#FF2196F3" Foreground="White" 
                                   Padding="10,5" Margin="0,0,0,5" 
                                   Click="TestPatch_Click"/>
                            <Button x:Name="ApplyPatchButton" Content="âœ… Apply Patch" 
                                   Background="#FF4CAF50" Foreground="White" 
                                   Padding="10,5" Margin="0,0,0,5" 
                                   Click="ApplyPatch_Click"/>
                            <Button x:Name="RevertPatchButton" Content="ðŸ”„ Revert Patch" 
                                   Background="#FFF44336" Foreground="White" 
                                   Padding="10,5" 
                                   Click="RevertPatch_Click"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Global Settings -->
                    <GroupBox Header="Global Settings" Margin="0,0,0,10">
                        <StackPanel>
                            <CheckBox x:Name="EnableAllPatchesCheckBox" Content="Enable All Patches" 
                                     Foreground="White" FontWeight="Bold" 
                                     Checked="EnableAllPatches_Checked"
                                     Unchecked="EnableAllPatches_Unchecked"/>
                            <CheckBox x:Name="EnableLoggingCheckBox" Content="Enable Logging" 
                                     Foreground="White" Margin="0,5,0,0"
                                     Checked="EnableLogging_Checked"
                                     Unchecked="EnableLogging_Unchecked"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Log Level -->
                    <GroupBox Header="Log Level" Margin="0,0,0,10">
                        <ComboBox x:Name="LogLevelComboBox" 
                                 Background="#FF404040" Foreground="White" 
                                 BorderBrush="#FF606060">
                            <ComboBoxItem Content="Debug" Tag="Debug"/>
                            <ComboBoxItem Content="Info" Tag="Info" IsSelected="True"/>
                            <ComboBoxItem Content="Warning" Tag="Warning"/>
                            <ComboBoxItem Content="Error" Tag="Error"/>
                        </ComboBox>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="ðŸ’¾ Save Configuration" 
                   Background="#FF4CAF50" Foreground="White" 
                   Padding="15,8" Margin="0,0,10,0" 
                   Click="SaveButton_Click"/>
            <Button x:Name="LoadButton" Content="ðŸ“ Load Configuration" 
                   Background="#FF2196F3" Foreground="White" 
                   Padding="15,8" Margin="0,0,10,0" 
                   Click="LoadButton_Click"/>
            <Button x:Name="ResetButton" Content="ðŸ”„ Reset to Defaults" 
                   Background="#FFF44336" Foreground="White" 
                   Padding="15,8" 
                   Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
