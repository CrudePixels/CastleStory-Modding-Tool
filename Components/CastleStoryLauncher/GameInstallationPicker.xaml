<Window x:Class="CastleStoryLauncher.GameInstallationPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Castle Story Installation" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" Background="#FF2D2D30"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FFE67C22" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸŽ® Castle Story Installation Detected" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Multiple Castle Story installations found. Please select one:" 
                          FontSize="12" 
                          Foreground="White" HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Installation List -->
        <GroupBox Grid.Row="1" Header="Available Installations" Foreground="White" FontWeight="Bold">
            <ListBox x:Name="InstallationListBox" 
                    Background="#FF404040" 
                    Foreground="White" 
                    BorderBrush="#FF606060"
                    SelectionChanged="InstallationListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding DisplayName}" 
                                      FontWeight="Bold" 
                                      FontSize="14" 
                                      Foreground="White"/>
                            <TextBlock Text="{Binding Path}" 
                                      FontSize="11" 
                                      Foreground="#FFCCCCCC" 
                                      Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding Version, StringFormat='Version: {0}'}" 
                                      FontSize="10" 
                                      Foreground="#FFAAAAAA" 
                                      Margin="0,1,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SelectButton" Content="Select" 
                   Click="SelectButton_Click" 
                   Background="#FF28A745" 
                   Foreground="White" 
                   BorderBrush="#FF28A745" 
                   Padding="20,8" 
                   Margin="0,0,10,0"
                   IsEnabled="False"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                   Click="CancelButton_Click" 
                   Background="#FF6C757D" 
                   Foreground="White" 
                   BorderBrush="#FF6C757D" 
                   Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
