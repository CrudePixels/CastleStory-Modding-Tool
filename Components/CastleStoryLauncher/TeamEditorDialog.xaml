<Window x:Class="CastleStoryLauncher.TeamEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Team" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Form -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Team Name:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="TeamNameTextBox" 
                   Background="#FF404040" Foreground="White" 
                   BorderBrush="#FF606060" Margin="0,0,0,15"/>
            
            <TextBlock Text="Team Color:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="TeamColorComboBox" 
                     Background="#FF404040" Foreground="White" 
                     BorderBrush="#FF606060" Margin="0,0,0,15">
                <ComboBoxItem Content="Red" Tag="#FF0000"/>
                <ComboBoxItem Content="Blue" Tag="#0000FF"/>
                <ComboBoxItem Content="Green" Tag="#00FF00"/>
                <ComboBoxItem Content="Yellow" Tag="#FFFF00"/>
                <ComboBoxItem Content="Purple" Tag="#800080"/>
                <ComboBoxItem Content="Orange" Tag="#FFA500"/>
                <ComboBoxItem Content="Cyan" Tag="#00FFFF"/>
                <ComboBoxItem Content="Magenta" Tag="#FF00FF"/>
            </ComboBox>
            
            <TextBlock Text="Faction:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="FactionComboBox" 
                     Background="#FF404040" Foreground="White" 
                     BorderBrush="#FF606060" Margin="0,0,0,15">
                <ComboBoxItem Content="Red" Tag="Red"/>
                <ComboBoxItem Content="Blue" Tag="Blue"/>
                <ComboBoxItem Content="Green" Tag="Green"/>
                <ComboBoxItem Content="Yellow" Tag="Yellow"/>
                <ComboBoxItem Content="Purple" Tag="Purple"/>
                <ComboBoxItem Content="Orange" Tag="Orange"/>
                <ComboBoxItem Content="Neutral" Tag="Neutral"/>
            </ComboBox>
            
            <TextBlock Text="Max Players:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="MaxPlayersTextBox" 
                   Background="#FF404040" Foreground="White" 
                   BorderBrush="#FF606060" Text="4"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OKButton" Content="OK" 
                   Background="#FF4CAF50" Foreground="White" 
                   Padding="20,8" Margin="0,0,10,0" 
                   Click="OKButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                   Background="#FFF44336" Foreground="White" 
                   Padding="20,8" 
                   Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
